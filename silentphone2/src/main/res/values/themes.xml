    <!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/silent_back_start</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBarInverse"
           parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/q_black</item>
    </style>

    <style name="ActionBarDuskTitle"
           parent="android:TextAppearance.Medium">
        <item name="android:textColor">@color/dusk_orange</item>
    </style>

    <style name="ActionBarDusk"
           parent="android:Widget.Holo.ActionBar">
        <!--        <item name="android:titleTextStyle">@android:style/TextAppearance.Holo.Widget.ActionBar.Title</item> -->
        <item name="android:titleTextStyle">@style/ActionBarDuskTitle</item>
        <item name="android:background">@color/q_black</item>
    </style>

    <style name="ActionBarBlackTitle"
           parent="android:TextAppearance.Medium">
        <item name="android:textColor">?sp_actionbar_title_text_color</item>
    </style>

    <style name="ActionBarBlackTitleSmall"
           parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/black_yellow</item>
    </style>

